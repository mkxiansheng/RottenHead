.list {
  width: 630rpx;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 40rpx;
}
.checkbox,
.content {
  float: left;
}
.checkbox {
  width: 40rpx;
  height: 40rpx;
}
.checkbox image {
  width: 100%;
  height: 100%;
}
.content {
  padding-left: 20rpx;
  max-width: 570rpx;
}
.content .title {
  padding-top: 2rpx;
  font-size: 14px;
  line-height: 1.5;
  color: #757575;
}
.content .time {
  margin-top: 10px;
  font-size: 12px;
  color: #9e9e9e;
}